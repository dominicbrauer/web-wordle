<div class="char-tile">
  <span class="char-tile-label"></span>
</div>

<style>
  .char-tile {
    width: 4rem;
    height: 4rem;
    font-size: 2.25em;
    font-weight: bold;
    background-color: var(--background);
    border: 4px solid var(--background-accent);
    border-radius: .5rem;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: .25rem;
  }

  .char-tile-selected,
  .active:hover {
    border-color: var(--accent);
    cursor: pointer;
  }

  .char-feedback-gray {
    background-color: var(--gray);
  }

  .char-feedback-yellow {
    background-color: var(--yellow);
  }

  .char-feedback-green {
    background-color: var(--green);
  }
</style>