---
const { class: className } = Astro.props;
---

<div class:list={[ 'key-tile', className]}>
  <span class="key-tile-label"><slot /></span>
</div>

<style>
  .key-tile {
    width: 3rem;
    height: 3rem;
    font-size: 1.5em;
    padding: .5rem;
    margin: 0 2px;
    background-color: var(--gray);
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 4px;
  }

  .key-tile:hover {
    background-color: darkgray;
    transform: scale(0.98);
  }

  .key-tile:active {
    transform: scale(0.9);
  }

  .enter-key {
    font-size: 1em;
  }

  .delete-key,
  .enter-key {
    width: 4.5rem;
  }

  .delete-key .key-tile-label {
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>