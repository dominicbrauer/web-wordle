---
const { class: className } = Astro.props;
---

<div class:list={[ 'key-tile', className]}>
  <span class="key-tile-label"><slot /></span>
</div>

<style>
  .key-tile {
    position: relative;
    width: auto;
    height: 4rem;
    aspect-ratio: 1 / 1;
    padding: .5rem;
    margin: 0 2px;
    font-size: 1.5em;
    background-color: var(--secondary);
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: var(--br-tile);
    box-shadow: 0px 4px 0 0px var(--border);
    z-index: 0;
    transition: all 150ms ease;
    user-select: none;
  }

  .key-tile-label {
    position: relative;
    display: flex;
    font-size: 1.25em;
    z-index: 1;
  }

  .key-tile:hover:not(.key-feedback-gray) {
    filter: brightness(1.1);
  }

  .key-tile:active {
    transform: scale(0.98) translateY(3px);
    box-shadow: none;
    transition: all 100ms ease;
  }

  .enter-key {
    font-size: 1.25em;
  }

  .delete-key,
  .enter-key {
    aspect-ratio: 1.5 / 1;
  }

  .key-feedback-gray {
    background-color: var(--gray);
    filter: brightness(0.75);
  }
  .key-feedback-yellow {
    background-color: var(--yellow);
    filter: brightness(1);
  }
  .key-feedback-green {
    background-color: var(--green);
    filter: brightness(1);
  }
</style>