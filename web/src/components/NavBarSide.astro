---
import { Image } from "astro:assets"
import logoImage from "../assets/images/logo.png"
import HomeIcon from "../assets/icons/house.svg"
import BookIcon from "../assets/icons/book-open-text.svg"
import GridIcon from "../assets/icons/grid-3x3.svg"
import SwordsIcon from "../assets/icons/swords.svg"
---

<div class="nav-bar-side">
  <section class="title-section">
    <Image src={logoImage} alt="A logo with the letter 'w' wearing a little crown. The top and bottow show five-letter word rows in the colors gray, yellow and green." class="logo" />
    <div class="title">
      <span class="title-one">wordle</span>
      <span class="title-two">CHAMPIONS</span>
    </div>
  </section>
  <section class="navigation-section">
    <div class="sidebar-card home-card">
      <HomeIcon />
      <span>Home</span>
    </div>
    <div class="sidebar-card tutorial-card">
      <BookIcon />
      <span>How to Play</span>
    </div>
    <div class="category">
      <span class="subheading">GAMING</span>
      <div class="sidebar-card classic-mode-card">
        <GridIcon />
        <span>Classic Mode</span>
      </div>
      <div class="sidebar-card duel-mode-card">
        <SwordsIcon />
        <span>Duel Mode</span>
      </div>
    </div>    
  </section>
</div>

<style>
  .nav-bar-side {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    position: relative;
    border-right: 2px solid var(--border);
    padding: 0 8rem 0 4rem;
    width: fit-content;
  }

  .title-section {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    height: 6rem;
    gap: .5rem;
    .logo {
      width: 1.75rem;
      height: auto;
      aspect-ratio: 1 / 1;
    }
    .title {
      display: flex;
      flex-direction: row;
      align-items: baseline;
      gap: .75rem;
    }
    .title-one {
      font-size: 1.5em;
      font-weight: 600;
      padding-block: 0;
      height: fit-content;
    }
    .title-two {
      color: var(--accent);
      font-size: 1.25em;
      font-weight: 300;
      height: fit-content;
    }
  }

  .category {
    display: flex;
    flex-direction: column;
    align-items: start;
    border-top: 2px solid var(--border);
    gap: 2rem;
    padding: 1.5rem 0;
  }

  .sidebar-card {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: left;
    gap: 1rem;
    transition: all 150ms ease;
    svg {
      stroke: var(--text-secondary);
      height: 1.75rem;
      width: auto;
      aspect-ratio: 1 / 1;
      transition: all 100ms ease;
    }
    span {
      font-size: 1.25em;
      color: var(--text-secondary);
      transition: all 100ms ease;
    }
  }

  hr {
    margin: 0;
    width: 100%;
  }

  .sidebar-card:hover {
    cursor: pointer;
    svg {
      stroke: var(--text-primary);
    }
    span {
      color: var(--text-primary);
    }
  }

  .navigation-section {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding: 2rem 0;
    width: fit-content;
  }

  .subheading {
    color: var(--text-secondary);
    font-weight: 400;
    font-size: 1.4em;
    opacity: 0.75;
  }
</style>