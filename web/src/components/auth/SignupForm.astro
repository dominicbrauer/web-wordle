---
import '../../styles/global.css'
import '../../styles/forms.css'
---

<div class="form-container">
  <h1>Sign Up</h1>
  <form name="signup-form" class="signup-form">
    <div class="form-element">
      <label for="name-input">Name:</label>
      <input
        type="text"
        name="name-input"
        id="name-input"
        placeholder="ProGamer42"
        required>
    </div>
    <div class="form-element">
      <label for="mail-input">E-Mail:</label>
      <input
        type="email"
        name="mail-input"
        id="mail-input"
        placeholder="example@mail.com"
        required>
    </div>
    <div class="form-element">
      <label for="pw-input-one">Password:</label>
      <input
        type="password"
        name="pw-input-one"
        id="pw-input-one"
        placeholder="Example123"
        required>
    </div>
    <div class="form-element">
      <label for="pw-input-two">Validate Password:</label>
      <input
        type="password"
        name="pw-input-two"
        id="pw-input-two"
        placeholder="Example123"
        required>
    </div>
  </form>
  <button name="submit-btn" id="submit-btn" class="submit-btn" disabled="true">Submit</button>
  <span class="redirect-text">
    Already have an account?
    <a href="/login">Log in</a>
  </span>
</div>

<script>
  interface SignupData {
    userName: string;
    email: string;
    password: string;
  }

  const nameInput = document.getElementById('name-input') as HTMLInputElement;
  const mailInput = document.getElementById('mail-input') as HTMLInputElement;
  const pwInputOne = document.getElementById('pw-input-one') as HTMLInputElement;
  const pwInputTwo = document.getElementById('pw-input-two') as HTMLInputElement;
  const submitButton = document.getElementById('submit-btn') as HTMLButtonElement;

  const inputElements = document.querySelectorAll('input') as NodeListOf<HTMLInputElement>;

  let nameInputEmpty: boolean = true;
  let mailInputEmpty: boolean = true;
  let pwInputOneEmpty: boolean = true;
  let pwInputTwoEmpty: boolean = true;

  inputElements?.forEach(input => {
    input?.addEventListener('input', () => {
      nameInputEmpty = nameInput.value != "" ? false : true;
      pwInputOneEmpty = pwInputOne.value != "" ? false : true;
      pwInputTwoEmpty = pwInputTwo.value != "" ? false : true;
      mailInputEmpty = mailInput.value != "" ? false : true;
      toggleButton();
  })});

  function toggleButton() {
    if (!(mailInputEmpty || pwInputOneEmpty || pwInputTwoEmpty || nameInputEmpty)) {
      submitButton.disabled = false;
    } else {
      submitButton.disabled = true;
    }
  }

  submitButton?.addEventListener('click', () => {
    if (pwInputOne.value != pwInputTwo.value) {
      alert("Both passwords must be the same!");
      return;
    }

    const userData: SignupData = {
      userName: nameInput.value,
      email: mailInput.value,
      password: pwInputOne.value
    };

    console.log(userData);

    submitForm(userData);
  });

  async function submitForm(userData: SignupData): Promise<void> {
    try {
      const response = await fetch('http://localhost:8080/users/add', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(userData),
      });

      if (!response.ok) {
        throw new Error(`Error: ${response.statusText}`);
      }

      const responseData = await response.text();
      console.log('Server response:', responseData);
    } catch (error) {
      console.error('Failed sending data:', error);
    }
  }
</script>